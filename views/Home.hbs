<!DOCTYPE html>
<html>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script type="text/javascript" src="https://code.jquery.com/jquery-1.7.1.min.js"></script>
<script src="/js/indexJQuery.js" type="text/javascript"></script>
  <head>
	<title>Initial Page</title>
  </head> 
  <body>
      <div style="position: absolute; top: 20px; right: 50px; text-align: right;">
        <a href="/insert"><button id="btnInsert"> Insert New Record </button> </a>
        </div>
      <div style="position: absolute; top: 20px; right: 200px; text-align: right;">
          <a href="/top10"><button id="top10"> Show top 10</button> </a>
      </div>
        <br>
        <br>
        <br>
        
      <table class="table" >
          <thead>
          <tr>
              <th scope="col">ID#</th>
              <th scope="col">NAME</th>
              <th scope="col">YEAR</th>
              <th scope="col">RANK</th>
              <th scope="col">DELETE</th>
              <th scope="col">UPDATE</th>
          </tr>
          </thead>
          <tbody>
            {{#each data}}
          <tr id = "tableRows">
              <th scope="row" >{{id}}</th>
              <td>{{name}}</td>
              <td>{{year}}</td>
              <td>{{rank}}</td>
              <td>
                  <button class = "delete">
                      <p id = "rowId" hidden>{{id}}</p>
                      <p id = "rowYear" hidden>{{year}}</p>
                      DELETE
                  </button>
              </td>
              <td>
                  <button class = "update">
                      UPDATE
                  </button>
              </td>
          </tr>
          {{/each}}

          </tbody>
      </table>
  </body> 
</html>